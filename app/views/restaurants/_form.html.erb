<div class="container-form">
  <%= simple_form_for restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :cuisine %>
    <%= f.input :location %>
    <%= f.input :address,
              input_html: { data: { geocoder_target: "address" } },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file, input_html: { class: "d-none", id: "photo-input" }, label_html: { class: "upload-photo"}, label: "ðŸ“· Upload a photo" %>
    <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    <div class="d-grid gap-2 mt-5">
      <%= f.submit class: "btn-primary" %>
    </div>
  <% end %> 
</div>