<div class="food-cards mb-5 p-3">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: "text-decoration-none text-dark" do %>
      <% if restaurant.photo.present? %>
        <%= cl_image_tag @food.photo.key, crop: :fill, class: "card-img-top card-img-height" %>
      <% else %>
        <%= image_tag "restaurant-placeholder.jpg", class: "card-img-top card-img-height" %>
      <%end%>
      <div class="card-body bg-black text-white">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.cuisine %></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.location %></h6>
        <p class="card-text"><%= restaurant.description %></p>
      </div>   
    <% end %>
  <% end %>
</div>