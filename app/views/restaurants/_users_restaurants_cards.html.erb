<% if @restaurants.present? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 p-5">
    <% @restaurants.each do |restaurant| %>
      <div class="col">
        <div class="card m-2" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.cuisine %></h6>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.location %></h6>
            <p class="card-text"><%= restaurant.description %></p>
            <div class="d-grid gap-2">
              <%= link_to edit_restaurant_path(restaurant),
                class: "btn button button-full" do %>
                  <spam>Update <%= restaurant.name %></spam>
                <% end %>
              <%= link_to restaurant_path(restaurant), method: :delete,
                class: "btn button button-full",
                data: { confirm: "Do you really want to delete your Fav Food?" } do %>
                  <spam>Delete <%= restaurant.name %></spam>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
